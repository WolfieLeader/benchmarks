{
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-env --allow-read src/index.ts",
    "start": "deno run --allow-net --allow-env --allow-read src/index.ts",
    "check": "deno check src/**/*.ts",
    "format": "deno fmt",
    "lint": "deno lint",
    "lint:fix": "deno lint --fix"
  },
  "imports": {
    "@oak/oak": "jsr:@oak/oak@^17.2.0",
    "cassandra-driver": "npm:cassandra-driver@^4.8.0",
    "drizzle-orm": "npm:drizzle-orm@^0.45.1",
    "drizzle-orm/node-postgres": "npm:drizzle-orm@^0.45.1/node-postgres",
    "drizzle-orm/pg-core": "npm:drizzle-orm@^0.45.1/pg-core",
    "ioredis": "npm:ioredis@^5.9.2",
    "mongodb": "npm:mongodb@^7.1.0",
    "pg": "npm:pg@^8.18.0",
    "uuid": "npm:uuid@^13.0.0",
    "zod": "npm:zod@^4.3.6"
  },
  "nodeModulesDir": "auto",
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": false,
    "proseWrap": "preserve",
    "semiColons": true,
    "trailingCommas": "never",
    "newLineKind": "auto",
    "spaceSurroundingProperties": true,
    "jsx.bracketPosition": "sameLine"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  }
}
