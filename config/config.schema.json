{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Benchmark Configuration v2",
  "type": "object",
  "required": ["benchmark", "container", "servers", "endpoints"],
  "additionalProperties": false,
  "properties": {
    "$schema": { "type": "string" },
    "benchmark": {
      "type": "object",
      "required": ["concurrency", "duration_per_endpoint", "request_timeout"],
      "additionalProperties": false,
      "properties": {
        "base_url": { "type": "string", "format": "uri" },
        "concurrency": { "type": "integer", "minimum": 1, "maximum": 10000 },
        "duration_per_endpoint": { "type": "string", "pattern": "^[0-9]+(ms|s|m|h)$" },
        "request_timeout": { "type": "string", "pattern": "^[0-9]+(ms|s|m|h)$" },
        "server_cooldown": { "type": "string", "pattern": "^[0-9]+(ms|s|m|h)$" },
        "warmup_duration": { "type": "string", "pattern": "^[0-9]+(ms|s|m|h)$" },
        "warmup_pause": { "type": "string", "pattern": "^[0-9]+(ms|s|m|h)$" }
      }
    },
    "container": {
      "type": "object",
      "required": ["cpu_limit", "memory_limit"],
      "additionalProperties": false,
      "properties": {
        "cpu_limit": { "type": "number", "exclusiveMinimum": 0 },
        "memory_limit": { "type": "string", "pattern": "^[0-9]+(\\.[0-9]+)?([kKmMgG][bB]?)?$" }
      }
    },
    "influx": {
      "type": "object",
      "description": "InfluxDB configuration for metrics export",
      "additionalProperties": false,
      "properties": {
        "url": {
          "type": "string",
          "description": "InfluxDB URL",
          "default": "http://localhost:8181"
        },
        "database": {
          "type": "string",
          "description": "InfluxDB database",
          "default": "benchmarks"
        },
        "token": {
          "type": "string",
          "description": "InfluxDB authentication token",
          "default": "benchmark-token"
        },
        "sample_rate": {
          "type": "string",
          "description": "Sampling percentage for latency points",
          "pattern": "^[0-9]+(\\.[0-9]+)?%$",
          "default": "10%"
        }
      }
    },
    "databases": {
      "type": "array",
      "items": { "type": "string", "minLength": 1 },
      "uniqueItems": true
    },
    "servers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "image", "port"],
        "additionalProperties": false,
        "properties": {
          "name": { "type": "string", "minLength": 1 },
          "image": { "type": "string", "minLength": 1 },
          "port": { "type": "integer", "minimum": 1, "maximum": 65535 }
        }
      },
      "minItems": 1
    },
    "endpoints": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/endpoint" }
    }
  },
  "$defs": {
    "endpoint": {
      "type": "object",
      "required": ["expect"],
      "additionalProperties": false,
      "properties": {
        "route": { "type": "string", "pattern": "^(GET|POST|PUT|DELETE|PATCH|HEAD|OPTIONS) /.*$" },
        "path": { "type": "string", "pattern": "^/.*$" },
        "method": { "type": "string", "enum": ["GET", "POST", "PUT", "DELETE", "PATCH", "HEAD", "OPTIONS"] },
        "headers": { "type": "object", "additionalProperties": { "type": "string" } },
        "query": { "type": "object", "additionalProperties": { "type": "string" } },
        "body": {},
        "form_data": { "type": "object", "additionalProperties": { "type": "string" } },
        "file": { "type": "string" },
        "expect": { "$ref": "#/$defs/expect" },
        "per_database": { "type": "boolean" },
        "variations": { "type": "array", "items": { "$ref": "#/$defs/variation" } },
        "sequence": { "$ref": "#/$defs/sequence" }
      }
    },
    "expect": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "status": { "type": "integer", "minimum": 100, "maximum": 599 },
        "body": {},
        "headers": { "type": "object", "additionalProperties": { "type": "string" } },
        "text": { "type": "string" }
      }
    },
    "variation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "path": { "type": "string", "pattern": "^/.*$" },
        "headers": { "type": "object", "additionalProperties": { "type": "string" } },
        "query": { "type": "object", "additionalProperties": { "type": "string" } },
        "body": {},
        "form_data": { "type": "object", "additionalProperties": { "type": "string" } },
        "file": { "type": "string" },
        "expect": { "$ref": "#/$defs/expect" }
      }
    },
    "sequence": {
      "type": "object",
      "required": ["id"],
      "additionalProperties": false,
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "capture": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "vars": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/varConfig" }
        }
      }
    },
    "varConfig": {
      "type": "object",
      "required": ["type"],
      "additionalProperties": false,
      "properties": {
        "type": { "type": "string", "enum": ["email", "int"] },
        "min": { "type": "integer" },
        "max": { "type": "integer" },
        "optional": {
          "oneOf": [{ "type": "boolean" }, { "type": "number", "minimum": 0, "maximum": 1 }]
        }
      }
    }
  }
}
