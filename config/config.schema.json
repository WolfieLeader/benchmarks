{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Benchmark Configuration",
  "type": "object",
  "required": ["global", "server_images", "endpoints"],
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string"
    },
    "global": {
      "type": "object",
      "required": ["base_url", "workers", "requests_per_endpoint", "timeout"],
      "additionalProperties": false,
      "properties": {
        "base_url": {
          "type": "string",
          "format": "uri",
          "description": "Base URL for all benchmark requests"
        },
        "workers": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of concurrent workers"
        },
        "requests_per_endpoint": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of requests per endpoint"
        },
        "timeout": {
          "type": "string",
          "pattern": "^[0-9]+(ms|s|m)$",
          "description": "Request timeout (e.g. 10s, 100ms)"
        },
        "cooldown": {
          "type": "string",
          "pattern": "^[0-9]+(ms|s|m)$",
          "description": "Cooldown between servers"
        },
        "cpu_limit": {
          "type": "string",
          "description": "Docker CPU limit (e.g. 2.0)"
        },
        "memory_limit": {
          "type": "string",
          "description": "Docker memory limit (e.g. 1gb)"
        },
        "warmup_requests_per_testcase": {
          "type": "integer",
          "minimum": 1,
          "description": "Number of warmup requests per testcase (warmup enabled via CLI)"
        },
        "capacity": {
          "type": "object",
          "description": "Capacity testing configuration (enabled via CLI at runtime)",
          "additionalProperties": false,
          "properties": {
            "min_workers": {
              "type": "integer",
              "minimum": 1,
              "description": "Starting worker count for growth phase"
            },
            "max_workers": {
              "type": "integer",
              "minimum": 1,
              "description": "Maximum worker count to test"
            },
            "precision": {
              "type": "string",
              "pattern": "^[0-9]+(\\.[0-9]+)?%$",
              "description": "Stop binary search when range is within this percentage (e.g. 5%)"
            },
            "success_rate": {
              "type": "string",
              "pattern": "^[0-9]+(\\.[0-9]+)?%$",
              "description": "Minimum success rate to pass (e.g. 99%)"
            },
            "p99_threshold": {
              "type": "string",
              "pattern": "^[0-9]+(ms|s|m)$",
              "description": "Maximum p99 latency to pass (e.g. 50ms)"
            },
            "warmup": {
              "type": "string",
              "pattern": "^[0-9]+(ms|s|m)$",
              "description": "Warmup duration per iteration (e.g. 2s, 500ms)"
            },
            "measure": {
              "type": "string",
              "pattern": "^[0-9]+(ms|s|m)$",
              "description": "Measurement duration per iteration (e.g. 10s, 5s)"
            }
          }
        }
      }
    },
    "server_images": {
      "type": "object",
      "additionalProperties": {
        "type": "integer",
        "minimum": 1,
        "maximum": 65535
      },
      "description": "Map of Docker image name to container port (e.g. 'node-express': 3001)"
    },
    "endpoints": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/$defs/endpoint"
      }
    }
  },
  "$defs": {
    "endpoint": {
      "type": "object",
      "required": ["method", "path"],
      "properties": {
        "method": {
          "type": "string",
          "enum": ["GET", "POST", "PUT", "DELETE", "PATCH"]
        },
        "path": {
          "type": "string"
        },
        "headers": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "query": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "body": {},
        "form_data": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "file": {
          "type": "string"
        },
        "expected_status": {
          "type": "integer"
        },
        "expected_headers": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "expected_body": {},
        "expected_text": {
          "type": "string"
        },
        "test_cases": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/test_case"
          }
        }
      }
    },
    "test_case": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "headers": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "query": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "body": {},
        "form_data": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "file": {
          "type": "string"
        },
        "expected_status": {
          "type": "integer"
        },
        "expected_headers": {
          "type": "object",
          "additionalProperties": { "type": "string" }
        },
        "expected_body": {},
        "expected_text": {
          "type": "string"
        }
      }
    }
  }
}
